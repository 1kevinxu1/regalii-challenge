<h1 class='page-header'>Log Game</h1>


<form id="submit-score-form" action="" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"><br>

  <div class="form-group">
    <label for="date-played">Date Played</label>
    <input id="date-played" class="form-control" type="date" name="game[date_played]" value=""><br>
  </div>

  <div class="form-group">
    <label for="select-opponent">Select Opponent</label>
    <%= collection_select :game, :player_two_id, User.where.not(id: current_user.id), :id, :email, {include_blank: false}, id: "select-opponent", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <label for="your-score">Your Score</label>
    <input id="your-score" class="form-control" type="text" name="game[player_one_score]" value="" placeholder="21"><br>
  </div>

  <div class="form-group">
    <label for="their-score">Their Score</label>
    <input id="their-score" class="form-control" type="text" name="game[player_two_score]" value="" placeholder="19"><br>
  </div>

  <button id="score-submit" class="btn btn-primary" type="submit" name="name">Submit Game</button>
</form>
